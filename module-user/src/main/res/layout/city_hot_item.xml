<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门城市"
        android:textColor="@color/text_666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beijing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rectangle_solid_line_corners2"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="北京"
        android:textColor="@color/text_333"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/shanghai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hot" />

    <TextView
        android:id="@+id/shanghai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rectangle_solid_line_corners2"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="上海"
        android:textColor="@color/text_333"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/guangzhou"
        app:layout_constraintStart_toEndOf="@id/beijing"
        app:layout_constraintTop_toBottomOf="@id/tv_hot" />

    <TextView
        android:id="@+id/guangzhou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rectangle_solid_line_corners2"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="广州"
        android:textColor="@color/text_333"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/shenzhen"
        app:layout_constraintStart_toEndOf="@id/shanghai"
        app:layout_constraintTop_toBottomOf="@id/tv_hot" />

    <TextView
        android:id="@+id/shenzhen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_solid_line_corners2"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="深圳"
        android:textColor="@color/text_333"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guangzhou"
        app:layout_constraintTop_toBottomOf="@id/tv_hot" />

</androidx.constraintlayout.widget.ConstraintLayout>
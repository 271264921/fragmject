<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme">

        <com.example.fragment.library.base.view.StatusBar
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/status_bar"
            android:layout_alignParentStart="true"
            android:padding="18dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/status_bar"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="用户信息管理"
            android:textColor="@color/text_fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_while_item_bottom"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="头像"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/avatar_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_1_raster" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_while_item_bottom"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="10dp"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="保密"
                    android:textColor="@color/text_666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_while_item_bottom"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sex_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/selector_transparent"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="10dp"
                    android:text="保密"
                    android:textColor="@color/text_666"
                    android:textSize="14sp"
                    tools:ignore="UseCompatTextViewDrawableXml" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_while_item_bottom"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="生日"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/birthday_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/selector_transparent"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="10dp"
                    android:text="保密"
                    android:textColor="@color/text_666"
                    android:textSize="14sp"
                    tools:ignore="UseCompatTextViewDrawableXml" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_while_item_bottom"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="居住地"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/city_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/selector_transparent"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="10dp"
                    android:text="保密"
                    android:textColor="@color/text_666"
                    android:textSize="14sp"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>